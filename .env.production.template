# Production Environment Variables for theOne Dating App
# Copy this file to .env.production and fill in your values

# App Configuration
DEBUG=False
APP_NAME=theOne - AI Dating
SECRET_KEY=your-super-secret-key-change-this-in-production

# Database Configuration (for persistent storage)
DATABASE_PATH=/app/data/database/theone_production.db

# File Upload Configuration (for persistent storage)
UPLOADS_PATH=/app/data/uploads
BACKUPS_PATH=/app/data/backups

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
GPT_MODEL=gpt-4o-mini
EMBEDDING_MODEL=text-embedding-3-small

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=2

# CORS Configuration
CORS_ORIGINS=*

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/app/logs/theone.log

# DigitalOcean Specific (if needed)
DO_SPACES_KEY=your-spaces-key
DO_SPACES_SECRET=your-spaces-secret
DO_SPACES_BUCKET=your-bucket-name
DO_SPACES_REGION=nyc3
